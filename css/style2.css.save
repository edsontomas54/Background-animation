
*{
    margin: 0;
    padding: 0;
}

section{
    position: relative;
    width: 100%;
    height: 100vh;
    background: url(../gallery-img-1.jpg);
}
section h2{
    position: relative;
    width: 100%;
    height: 100vh;
    text-align: center;
    line-height: 100vh;
    font-size: 10vw;
    color: #fff;
    font-weight: 700;
}
.banner
{
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
    display: flex;
    flex-wrap: wrap;
}
.banner .blocks{
    position: relative;
    display: block;
    width: 10vw;
    height: 10vw;
    background: #fff;
    animation: animating 5s ease-in-out forwards;
   
}

/* animations  */

@keyframes animating
{
    0%{
        opacity: 0;
        transform: scale(1) translateZ(1000px);
    }

    50%{
        opacity: 1;
        background: url(../gallery-img-1.jpg)no-repeat;
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
    }

   100%{
    opacity: 1;
    transform: scale(0) translateY(0px);
    background: url(../gallery-img-1.jpg)no-repeat;
    background-size: cover;
    background-position: center;
    background-attachment: fixed;
    }

